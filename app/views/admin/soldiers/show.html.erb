<%- model_class = Soldier -%>
<%- model_class_tr = SoldierTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<div class="form-actions">
  <%= link_to t('helpers.links.list'),
              admin_soldiers_path, :class => 'btn'  %>
  <%= link_to t('helpers.links.edit'),
              edit_admin_soldier_path(@soldier), :class => 'btn' %>
  <%= link_to t('helpers.links.delete'),
              admin_soldier_path(@soldier),
              :method => :delete,
							:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
</div>

