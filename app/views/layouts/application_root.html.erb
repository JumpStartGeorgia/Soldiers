<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%
      desc = t('.about_text1')
      desc << " "
      desc << t('.about_text2')
    %>

    <meta name="description" content="<%= desc %>">

	  <meta property="og:title" content="<%= content_for?(:title) ? "#{yield(:title)} | #{t('app.common.app_name')}" :
			  t('app.common.app_name') %>" />
		<meta property="og:description" content="<%= desc %>" />
	  <meta property="og:type" content="non_profit" />
	  <meta property="og:url" content="<%= current_url %>" />
	  <meta property="og:image" content="<%= full_url(image_path('logo.png')) %>" />
	  <meta property="og:site_name" content="<%= t('app.common.app_name') %>" />
	  <meta property="fb:app_id" content="<%= ENV['SOLDIERS_FACEBOOK_APP_ID'] %>" />

    <title><%= content_for?(:title) ? "#{yield(:title)} | #{t('app.common.app_name')}" :
				t('app.common.app_name') %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.ico', :rel => 'shortcut icon' %>
  </head>
  <body class="app_root">






    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <div class="container-fluid nav-collapse">

            <div class="row-fluid">
              <div class="span4 offset4" id="center_header">
                <%= link_to(t('app.common.app_name'), root_path(:locale => I18n.locale))%>
              </div>
              <div class="span4">
	              <ul class="nav pull-right">
		              <% if user_signed_in? %>
				            <li class="dropdown">
				              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				                    <%= current_user.nickname %>
				                    <b class="caret"></b>
				              </a>
				              <ul class="dropdown-menu">
                   			<li>
                         <%= link_to t('.soldiers'), admin_soldiers_path %>
                        </li>
                        <% if current_user.role? User::ROLES[:admin] %>
                     			<li>
                           <%= link_to t('.users'), admin_users_path %>
                          </li>
                        <% end %> 		
						            <li>
				     		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
										    </li>
				              </ul>
				            </li>
		              <% end %>
							    <% I18n.available_locales.each do |locale| %>
								    <% if locale != I18n.locale %>
									    <li class="locale_switcher"><%= link_to t("app.language.#{locale}"), params.merge(:locale => locale) %></li>
								    <% end %>
							    <% end %>
	              </ul>
              </div>
            </div>

          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>



    <div id="header_bg">
      <!--<img src="/assets/header-bg.jpg" alt="" />-->
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span4">
            <h1><%= @total_dead %></h1>
            <h3><%= t('.header2') %></h3>
          </div>
        </div>
      </div>
    </div>


    <div class="container-fluid">
      <div class="row-fluid">
        <div id="about_container" class="span10">
          <!--h1><%= t('.about_header') %></h1-->
          <div><%= t('.about_text1') %></div>
          <div><%= t('.about_text2') %></div>
        </div>
      </div>
    </div>

    <%= yield %>


    <footer class="clear">
			<div id="left">
        <%= link_to t('.download'), '#' %>
      </div>
		  <div id="middle">
				<%= t('.last_updated', :date => @last_update) %>
			</div>
			<div id="right" class="clear">
				<ul>
					<li id="js_link_text">
						<%= t("layouts.application.js_link_text") %>:
					</li>
					<li id="js_logo">
						<%= link_to(image_tag("jumpstart-logo.png"), "http://www.jumpstart.ge", :target => "_blank",
								:title => t("layouts.application.js_link_title")	) %>
					</li>
				</ul>
			</div>
    </footer>









    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

		<% if Rails.env.production? %>
			<!-- insert google analytics for production site here -->
		<% elsif Rails.env.staging? %>
			<!-- insert google analytics for staging site here -->
		<% end %>

  </body>
</html>
